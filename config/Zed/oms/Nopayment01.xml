<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Nopayment01" main="true">

        <subprocesses>
            <process>ReplaceGiftCard</process>
        </subprocesses>

        <states>
            <state name="new" reserved="true"/>
            <state name="waiting for payment"/>
            <state name="payment done"/>
            <state name="underpaid"/>
            <state name="start shipment"/>
            <state name="end shipment"/>
            <state name="closed"/>
            <state name="returned"/>
            <state name="canceled"/>
            <state name="invalid"/>
        </states>

        <transitions>
            <transition happy="true">
                <source>new</source>
                <target>waiting for payment</target>
                <event>authorize</event>
            </transition>
            <transition>
                <source>new</source>
                <target>invalid</target>
                <event>authorize</event>
            </transition>
            <transition happy="true">
                <source>waiting for payment</source>
                <target>payment done</target>
                <event>paid</event>
            </transition>

            <transition happy="true">
                <source>waiting for payment</source>
                <target>underpaid</target>
                <event>paid</event>
            </transition>

            <transition>
                <source>underpaid</source>
                <target>waiting for payment</target>
                <event>forward</event>
            </transition>

            <transition happy="true">
                <source>payment done</source>
                <target>gift card replacement pending</target>
                <event>start giftcard replacement</event>
            </transition>

            <transition happy="true">
                <source>gift card replacement completed</source>
                <target>start shipment</target>
                <event>complete giftcard replacement</event>
            </transition>

            <transition>
                <source>waiting for payment</source>
                <target>canceled</target>
            </transition>
            <transition happy="true">
                <source>start shipment</source>
                <target>end shipment</target>
                <event>ship</event>
            </transition>
            <transition happy="true">
                <source>end shipment</source>
                <target>closed</target>
                <event>close</event>
            </transition>
            <transition happy="true">
                <source>end shipment</source>
                <target>returned</target>
                <event>return</event>
            </transition>
        </transitions>

        <events>
            <event name="authorize" onEnter="true" manual="true"/>
            <event name="paid" manual="true" />
            <event name="pick" manual="true" />
            <event name="ship" manual="true" />
            <event name="forward" onEnter="true" />
            <event name="close" manual="true" />
            <event name="return" manual="true" />
        </events>

    </process>

    <process name="ReplaceGiftCard" file="GiftCardSubprocess/ReplaceGiftCard01.xml"/>
</statemachine>
