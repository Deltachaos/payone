<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Order01" main="true">

        <subprocesses>
            <process>Offer</process>
            <process>Payment</process>
            <process>DummyRefund</process>
            <process>CreateGiftCard</process>
        </subprocesses>

        <states>
            <state name="new" reserved="true"/>
        </states>

        <transitions>
            <transition condition="Offer/IsOffer">
                <source>new</source>
                <target>offer</target>
                <event>check offer</event>
            </transition>

            <transition happy="true">
                <source>new</source>
                <target>payment start</target>
                <event>check offer</event>
            </transition>

            <transition>
                <source>offer</source>
                <target>payment start</target>
                <event>convert offer to order</event>
            </transition>

        </transitions>

    </process>

    <process name="Offer" file="OrderSubprocess/Offer01.xml"/>
    <process name="Payment" file="OrderSubprocess/Payment01.xml"/>
    <process name="DummyRefund" file="DummySubprocess/DummyRefund01.xml"/>
    <process name="CreateGiftCard" file="GiftCardSubprocess/CreateGiftCard01.xml"/>

</statemachine>
