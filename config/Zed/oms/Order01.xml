<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Order01" main="true">

        <subprocesses>
            <process>Offer</process>
            <process>Payment</process>
        </subprocesses>

        <transitions>
            <transition happy="true">
                <source>offer</source>
                <target>new</target>
                <event>convert offer to order</event>
            </transition>
        </transitions>

        <events>
            <event name="convert offer to order" manual="true"/>
        </events>

    </process>

    <process name="Offer" file="OfferSubprocess/Offer01.xml"/>
    <process name="Payment" file="DummyPayment01.xml"/>

</statemachine>
