<?xml version="1.0"?>
<statemachine
    xmlns="spryker:oms-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Offer01">
        <states>
            <state name="offer" manual="true"/>
        </states>

        <events>
            <event name="check offer" onEnter="true"/>
            <event name="convert offer to order" manual="true" command="Offer/ConvertOfferToOrder"/>
        </events>
    </process>

</statemachine>
